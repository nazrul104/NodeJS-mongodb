<!DOCTYPE html>
<html lang="en">
<head>
    <% include head %>
</head>
<body class="container">
    <header>
        <% include header %>
    </header>
    <main>
        <div class="jumbotron">
			<table style="width:100%">
				<thead>
						<tr>
							<th>Name</th>
							<th>Note</th>
							<th>Updated At</th>
							<th>Action</th>
						</tr>
				</thead>
				<tbody style="text-align:center">
				<% for(var i=0;i<mydata.length;i++){ %>
				<tr>
					<td><%- mydata[i]["name"]%></td>
					<td><%- mydata[i]["note"]%></td>
					<td><%- mydata[i]["updated_at"]%></td>
					<td>
						<a href="/edit/<%= mydata[i]['_id'] %>" class="btn btn-default btn-lg" title="Update this todo item">
							<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
						</a>
						
						<a href="/delete/<%= mydata[i]['_id'] %>" class="btn btn-default btn-lg" title="Update this todo item">
							<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
						</a>	
					</td>
				</tr>
				<%}%>
			  </tbody>
			</table>
	
        </div>
		
    </main>
    <footer>
        <% include footer %>
    </footer>
</body>
</html>